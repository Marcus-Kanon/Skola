@using Test_matsidaBlazor.Data
@using Test_matsidaBlazor.Data.Models

<h3>Login InputUser</h3>

<!-- Password Input -->
<div class="input-group mb-3 w-50">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Password</span>
    </div>
    <input @bind="Parent.Password" type="text" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
</div>

@code {
    [Parameter]
    public Login? Parent { get; set; } = null!;
    [Parameter]
    public EventCallback<string> Callback { get; set; }


    public Task OnChanged(ChangeEventArgs e)
    {
        return Callback.InvokeAsync(e.Value.ToString());
    }

}
